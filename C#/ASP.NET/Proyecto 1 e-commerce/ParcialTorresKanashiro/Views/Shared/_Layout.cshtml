            </button>
            <a href="~/@Session["idioma"]/Usuarios/CerrarSesion" class="btn btn-danger">Cerrar sesion</a>
        </div>
        <div class="collapse navbar-collapse" id="navbarsExample01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/@Session["idioma"]/Productos/Index">Listado de productos<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@Session["idioma"]/Usuarios/Index">Listado de usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/@Session["idioma"]/Proveedores/Index">Listado de Proveedores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="~/@Session["idioma"]/Compras/Index">Listado de compras</a>
                </li>
            </ul>
        </div>
    </nav>


























